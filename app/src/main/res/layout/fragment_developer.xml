<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Fragments.DeveloperFragment">


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/item_color"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/akash" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="AKASH KUMAR"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="About-"
                android:textColor="@color/teal_200"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:text="Hello,I am AKASH KUMAR . and I make many types of application in your requirement"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="Contect-"
                android:textColor="@color/teal_200"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gmail"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:text="akp97583757@gmail.com"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/phone"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:text="698763966"
                android:textSize="22sp" />

            <TextView

                android:textColor="@color/white"
                android:id="@+id/signingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="prajapati boy 1.0"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>